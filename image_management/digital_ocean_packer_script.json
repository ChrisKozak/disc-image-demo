{
    "variables": {
        "commit": "{{env `SNAP_COMMIT_SHORT`}}",
        "pipeline_counter": "{{env `SNAP_PIPELINE_COUNTER`}}",
        "image_name_prefix": "{{env `APPLICATION_NAME`}}"
    },
    "builders": [{
        "type": "digitalocean",
        "region": "lon1",
        "image": "ubuntu-14-04-x64",
        "snapshot_name": "{{user `image_name_prefix`}}-{{user `pipeline_counter`}}.{{user `commit`}}",
        "state_timeout": "60m"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sudo apt-get -y update",
            "sudo apt-get -y install golang",
            "go version"
        ]
    },{
        "type": "file",
        "source": "application/webservice.go",
        "destination": "/tmp/webservice.go"
    },{
        "type": "shell",
        "inline": [
            "go build /tmp/webservice.go",
            "/tmp/webservice &"
        ]
    }]
}

