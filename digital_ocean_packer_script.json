{
    "variables": {
        "commit": "{{env `SNAP_COMMIT`}}",
        "pipeline_counter": "{{env `SNAP_PIPELINE_COUNTER`}}"
    },
    "builders": [{
        "type": "digitalocean",
        "region": "lon1",
        "image": "ubuntu-14-04-x64",
        "snapshot_name": "disk-image-demo-{{user `pipeline_counter`}}.{{user `commit`}}",
        "state_timeout": "60m"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": ["echo foo", "apt-get install sl"]
    }]
}

